<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Bookmarked Graphs"
        android:id="@+id/button_view_bookmarked"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Custom Attributes"
        android:id="@+id/button_edit_attributes"
        android:layout_below="@+id/button_view_bookmarked"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Attribute"
        android:id="@+id/button_new_attribute"
        android:layout_above="@+id/button_view_bookmarked"
        android:layout_centerHorizontal="true"
        android:onClick="createNewAttribute"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Graph"
        android:id="@+id/button_new_graph"
        android:layout_above="@+id/button_new_attribute"
        android:layout_centerHorizontal="true"
        android:onClick="selectCreateGraph"/>

</RelativeLayout>
